<section id="subscribe">
    <div class="container">
        <div class="title">
            <h2>Don't Want to Miss Anything</h2>
            <img src="/images/icons/swirl-arrow-icon.svg" alt="swirl arrow" />
        </div>
        <form method="post" href="/Subscribe">
            <div class="alternative">
                <h4>Sign up for Newsletters</h4>

                <div class="options">
                    <div class="checkbox-group">
                        <div class="input-group">
                            <input type="checkbox" asp-for="DailyNewsletter" />
                            <label asp-for="DailyNewsletter">DailyNewsletter</label>
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <div class="input-group">
                            <input type="checkbox" asp-for="AdvertisingUpdates" />
                            <label asp-for="AdvertisingUpdates">AdvertisingUpdates</label>
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <div class="input-group">
                            <input type="checkbox" asp-for="DailyNewsletter" />
                            <label asp-for="DailyNewsletter">DailyNewsletter</label>
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <div class="input-group">
                            <input type="checkbox" asp-for="WeekinReview" />
                            <label asp-for="WeekinReview">WeekinReview</label>
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <div class="input-group">
                            <input type="checkbox" asp-for="EventUpdates" />
                            <label asp-for="EventUpdates">EventUpdates</label>
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <div class="input-group">
                            <input type="checkbox" asp-for="StartupsWeekly" />
                            <label asp-for="StartupsWeekly">StartupsWeekly</label>
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <div class="input-group">
                            <input type="checkbox" asp-for="Podcasts" />
                            <label asp-for="Podcasts">Podcasts</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-email">
                <div class="input-group">
                    <i class="fa-regular fa-envelope"></i>
                    <input asp-for="Email" />
                </div>
                <button type="submit" class="btn btn-theme">Subscribe *</button>
            </div>
            
                <span class="status-message">* Yes, I agree to the terms and privacy policy.</span>
            
        </form>
    </div>
</section>